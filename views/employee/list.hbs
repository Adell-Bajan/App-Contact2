<h3><a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Create New</a><b> Contact List</b></h3>
<table class="table table-striped">
	<thead>
		<tr>
			<td>Full Name</td>
			<td>Email</td>
			<td>Mobile</td>
			<td>City</td>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each employees}}
		<tr>
			<td>{{this.fullName}}</td>
			<td>{{this.email}}</td>
			<td>{{this.mobile}}</td>
			<td>{{this.city}}</td>
			<td>
				<a href="/employee/{{this._id}}">
					<i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
				</a>
				<a href="/employee/delete/{{this._id}}"
					onclick="return confirm('Are you sure to delete this record ?')"><i class="fa fa-trash fa-lg"
						aria-hidden="true"></i></a>
			</td>
		</tr>
		{{/each}}
		{{!-- {{/list}} --}}
	</tbody>
</table>